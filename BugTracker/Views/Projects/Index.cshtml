@model IEnumerable<BugTracker.Models.Project>



    <br />
   @if (User.IsInRole("Admin") || User.IsInRole("Project Manager"))
   {
                <div class="row">
                    <div class="col-md-6">
                        <div class="card text-center">
                            <div class="card-body">
                                <h5 class="card-title">Create a Project</h5>
                                <a href="@Url.Action("Create", "Projects")" class="btn btn-lg btn-inverse-primary">Create</a>
                            </div>
                        </div>
                    </div>

                    <br />

                    <div class="col-md-6">
                        <div class="card text-center">
                            <div class="card-body">
                                <h5 class="card-title">Edit a Project</h5>
                                <a href="@Url.Action("EP", "Projects")" class="btn btn-lg btn-inverse-primary">Edit</a>
                            </div>
                        </div>
                    </div>
                    <br />
                </div>
   }

   <br />
  
   <div class="row">
       @if (User.IsInRole("Admin") || User.IsInRole("Project Manager"))
       {
           <div class="col-md-6">
               <div class="card text-center">
                   <div class="card-body">
                       <h5 class="card-title">All Projects</h5>
                       <a href="@Url.Action("AP","Projects")" class="btn btn-lg btn-inverse-primary">View All Projects</a>
                   </div>
               </div>
           </div>
       }
       <br />
       @if (User.Identity.IsAuthenticated)
       {
           <div class="col-md-6">
               <div class="card text-center">
                   <div class="card-body">
                       <h5 class="card-title">Assigned Projects</h5>
                       <a href="@Url.Action("Assigned","Projects")" class="btn btn-lg btn-inverse-primary">Assigned Projects</a>
                   </div>
               </div>
           </div>

           <br />
       }

   </div>




@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/Content/css")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
}
